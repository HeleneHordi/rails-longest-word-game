<div class="container">
  <h1>Jeu des lettres</h1>
  <p class="mb-3"><%= @letters.join(" ") %></p>

  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="letters" value="<%= @letters.join %>">
    <div class="form-group">
      <input type="text" name="word" class="form-control" placeholder="Votre mot">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Soumettre</button>
  </form>
</div>
